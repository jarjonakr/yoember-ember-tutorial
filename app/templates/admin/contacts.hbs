<h2>Contact Admin Cards</h2>
<div class="row">
  {{#each model as |contact|}}
    <div class="col-md-4">
      <div class="panel panel-default contact-item">
        <div class="panel-heading">
          <h3 class="panel-title">Email: {{contact.email}}</h3>
        </div>
        <div class="panel-body">
         
          <p> {{contact.message}}</p>
        </div>
        <div class="panel-footer text-right">
          
          <button class="btn btn-danger btn-xs" {{action "deleteContact" contact}}>Delete</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>

