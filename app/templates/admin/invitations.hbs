
<h2>Invitation Admin Cards</h2>
<div class="row">
  {{#each model as |invitation|}}
    <div class="col-md-4">
      <div class="panel panel-default invitation-item">
        <div class="panel-heading">
          <h3 class="panel-title">ID: {{invitation.id}}</h3>
        </div>
        <div class="panel-body">
         
          <p>Email: {{invitation.email}}</p>
        </div>
        <div class="panel-footer text-right">
          
          <button class="btn btn-danger btn-xs" {{action "deleteInvitation" invitation}}>Delete</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>